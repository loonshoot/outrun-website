<div class="relative overflow-hidden bg-gray-200">
  <div class="container mx-auto pt-5">
  <!-- Container for the card carousel -->
    <div class="flex flex-row flex-nowrap space-x-4 transition-transform duration-300 ease-in-out overflow-x-auto md:overflow-hidden" id="cardCarousel">
      <!-- Cards -->
      {% for card in cards %}
        <div class="border-light border-2 rounded-none">
          <div class="flex flex-col justify-between">
            <!-- Card Content -->
            <div class="relative p-4 w-64">
              {% if card.image %} <img src="{{ card.image }}" alt="{{ card.title }} Image" class="w-full h-1/3 object-cover rounded-t-lg"> {% endif %}
              <h2 class="text-2xl font-semibold font-mono text-yellow-400">{{ card.title }}</h2>
              <p class="font-mono text-light">{{ card.description }}</p>
            </div>
            <div class="p-4">
              {% bookshop "element/button" bind: card.button %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="flex flex-row-reverse pt-5">
    <!-- Right arrow button for sliding cards -->
      <p class="text-light block md:hidden">
        Swipe →
      </p>
      <p class="text-light hidden md:block">
        <a id="nextCardButton" class="no-underline">
          More →
        </a>
      </p>
    </div>
  </div>
</div>
<script>
    function nextCard() {
      // Move the first card to the end, creating a continuous carousel effect
      const carousel = document.getElementById('cardCarousel');
      const firstCard = carousel.children[0];
      carousel.appendChild(firstCard.cloneNode(true));
      carousel.removeChild(firstCard);
    }
  window.onload = function(){
    document.getElementById('nextCardButton').onclick = function() {
        nextCard()
      };
  }
</script>